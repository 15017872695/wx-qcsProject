/* pages/members/members.wxss */
.MemberCenter-Wapper{
  width: 100%;
  height: 100%;
}
.MemberCenter-TopBanner{
  background: #2D2E39;
  width: 100%;
  height: 380rpx;
  padding: 26rpx 26rpx 0rpx 26rpx;
}
.MemberCenter-TopBanner image{
  width: 93%;
  height: 100%;
}
.MemberCenter-TopNav{
  width: 100%;
  height: 130rpx;
  padding: 40rpx 0rpx;
  background: #2D2E39;
}
.MemberCenter-TopNav image{
  width: 100%;
  height: 100%;
}
.MemberCenter-ListNav{
  width: 100%;
  height: 110rpx;
  background: #FAFAFA;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.MemberCenter-ListNav view{
  height: 100%;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
  color: #B6B6B6;
  box-sizing: border-box;
}
.MemberCenter-ListNav .active{
  color: #000;
  border-bottom: 2px solid #66D7C3;
}
.MemeberCenter-ListData{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.ListWapper{
  width: 50%;
  height: 580rpx;
  padding: 15rpx;
  border: 1px solid #FAFAFA;
  box-sizing: border-box;
}
.image-Wapper{
  width: 100%;
  height: 300rpx;
  border:1px solid #eee;
  
}
.image-Wapper image{
  width: 100%;
  height: 100%;
}
.List-sale_point{
  font-size: 27rpx;
  margin: 20rpx 0rpx;
}
.List-item-short-name{
  font-size: 27rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #B6B6B6;
  margin-bottom: 30rpx;
}
.ListPrice-top{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.max_market_price{
  color: #FF6692;
  font-size: 32rpx;
  font-weight: 700;
}
.max_vip_price{
  color: #CEA760;
  font-size: 32rpx;
  font-weight: 700;
}
.members{
  display: inline-block;
  background: #000;
  border-radius: 5rpx;
  text-align: center;
  line-height: 35rpx;
  color: #CEA760;
  height: 40rpx;
  width: 70rpx;
  font-size: 24rpx;
  margin-left: 10rpx;
}
.Cath{
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: #FF6692;
}
.specials{
  display: inline-block;
  color: #FF6692;
  background: #FFE2EC;
  font-size: 30rpx;
  margin-top: 20rpx;
}